<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="followUpPU" transaction-type="JTA">
    <jta-data-source>java:app/followUpDB</jta-data-source>
    <class>br.edu.ifpb.followup.entity.Resposta</class>
    <class>br.edu.ifpb.followup.entity.Usuario</class>
    <class>br.edu.ifpb.followup.entity.Aluno</class>
    <class>br.edu.ifpb.followup.entity.ListaDeQuestao</class>
    <class>br.edu.ifpb.followup.entity.Questao</class>
    <class>br.edu.ifpb.followup.entity.Professor</class>
    <class>br.edu.ifpb.followup.entity.ListaRespondida</class>
    <class>br.edu.ifpb.followup.entity.Alternativa</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
